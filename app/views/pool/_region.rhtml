<% content_tag :table do -%>
  <% content_tag :tr do -%>
    <% content_tag :td do %>
      <%= content_tag :div, region.to_s, :class => 'regionName', :style => "text-align: #{left_or_right};" %>
      <% content_tag :table, :cellpadding => 15, :border => 0 do -%>
        <!-- recursive bracket. -->
        <%= game_partial region.championship_game, left_or_right, 0, region.is_final_4? ? 1 : nil %>
      <% end -%>
    <% end -%>
  <% end -%>
<% end -%>
