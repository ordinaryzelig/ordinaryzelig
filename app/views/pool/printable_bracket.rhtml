<html>
  <head>
    <title>ordinaryzelig.org - printable bracket - <%= @pool_user.user.display_name %> (<%= @season.year %>)</title>
  </head>
  <body>
    <div style="width: 11in; height: 8.5in; text-align: center;">
      <% @season.root_game.children.each_with_index do |game, i| -%>
        <% direction = game.parent.top == game ? :left : :right -%>
        <% content_tag :div, :style => "width: 12cm; float: #{direction};" do -%>
          <%= content_tag(:table,
                          game_partial(game, direction),
                          :style => "border-collapse: collapse; width: 100%; table-layout: fixed;",
                          :cellpadding => 15) %>
        <% end -%>
      <% end -%>
    </div>
  </body>
</html>
