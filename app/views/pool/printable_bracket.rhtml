<html>
  <head>
    <title>ordinaryzelig.org - printable bracket - <%= @pool_user.user.display_name %> (<%= @season.year %>)</title>
  </head>
  <body>
    <div style="width: 11in; height: 8.5in; text-align: center;">
      <%= @season.year %>
      <% @season.regions.non_final_4.each_with_index do |region, i| -%>
        <% left_or_right = region.championship_game.left_or_right -%>
        <% styles = "font-size: 125%; width: 12cm;" -%>
        <% styles << " float: #{left_or_right};" if left_or_right -%>
        <% content_tag :div, :style => styles do -%>
          <%= i %> - <%= region.order_num %> - <%= region %>
          <%= content_tag(:table,
                          game_partial(region.championship_game, left_or_right),
                          :style => "border-collapse: collapse; width: 100%; table-layout: fixed;",
                          :border => 1,
                          :cellpadding => 15) %>
        <% end -%>
      <% end -%>
    </div>
  </body>
</html>
