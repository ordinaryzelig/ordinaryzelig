<%= error_messages(@message) %>

<% form_tag do -%>
  <table id="blogFormTable">
    <tr>
      <th>subject</th>
      <td><%= text_field(:message, :subject, :id => "title") %></td>
    </tr>
    <tr>
      <th>body</th>
      <td><%= text_area(:message, :body) %></td>
    </tr>
    <tr>
      <td></td>
      <td>
        <%= submit_tag("post") %>
        <%= submit_to_remote_preview %>
      </td>
    </tr>
  </table>
<% end -%>

<%= preview_div %>

<script>
  <%= focus("title") %>
</script>