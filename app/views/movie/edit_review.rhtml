<%= error_messages(@review) %>

<%= form_tag(:movie_id => @movie.id) %>

  <table>
    <tr valign=top>
      <td>rating</td>
      <td>
        <div style="margin-bottom: 10mm;">
          <%= select(:review, :movie_rating_id, MovieRating.container, :include_blank => true) %> <span style="font-size: 10px;">more rating types coming soon</span>
        </div>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>write a review (optional)</td>
    </tr>
    <tr>
      <td>title</td>
      <td><%= text_field(:review, :title) %></td>
    </tr>
    <tr>
      <td valign=top>review</td>
      <td><%= text_area(:review, :review) %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= submit_tag(:save) %></td>
    </tr>
  </table>
  <%= hidden_field(:review, :user_id) %>
  <%= hidden_field(:review, :movie_id) %>

<%= end_form_tag %>
