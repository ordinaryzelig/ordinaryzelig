<%= render(:partial => 'new_movie_link') %>

<%= render(:partial => 'search') %>

<% if params[:id] -%>
  
  <%= pluralize(@movies.size, "movie") %> found<br/>
  
  <% @movies.each do |movie| -%>
    <%= link_to(highlight(movie.title, @search_text), :action => "show", :id => movie.id) %><br/>
  <% end -%>
  
<% end -%>
