<%= error_messages(@review) %>

<%= form_tag %>
  
  <table>
    <tr>
      <td>rating</td>
      <td><%= select(:review, :movie_rating_id, MovieRating.container, :include_blank => true) %></td>
    </tr>
    <tr>
      <td valign=top>review</td>
      <td><%= text_area(:review, :review) %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= submit_tag(:save) %></td>
    </tr>
  </table>
  <%= hidden_field(:review, :movie_id) %>
  
<%= end_form_tag %>